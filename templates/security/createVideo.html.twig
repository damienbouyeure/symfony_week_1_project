{% extends 'base.html.twig' %}

{% block title %}Ajouter une video {% endblock %}
{% block body %}


    <div class="container">
        <div class="row">
            <div class="col s12 m8 offset-m2">
                <div class="card">
                    <div class="card-image">
                        <img src="{{ asset('/img/subscribeImg.jpg') }}">
                        <span class="card-title title-dark">Ajouter une video</span>
                    </div>
                    <div class="card-content">
                        {{ form_start(form) }}
                        {{ form_errors(form) }}
                        <div>
                            {{ form_label(form.title) }}
                            {{ form_errors(form.title) }}
                            {{ form_widget(form.title) }}
                            {{ form_help(form.title) }}
                        </div>
                        <div>
                            {{ form_label(form.url) }}
                            {{ form_errors(form.url) }}
                            {{ form_widget(form.url) }}
                            {{ form_help(form.url) }}
                        </div>
                        <div>
                            {{ form_label(form.description) }}
                            {{ form_errors(form.description) }}
                            {{ form_widget(form.description) }}
                            {{ form_help(form.description) }}
                        </div>
                        <div>
                            {{ form_label(form.categories) }}
                            {{ form_errors(form.categories) }}
                            {{ form_widget(form.categories, { 'attr': {'class': 'browser-default'} }) }}
                            {{ form_help(form.categories) }}
                        </div>
                        <div>
                            {{ form_label(form.published) }}
                            {{ form_errors(form.published) }}
                            {{ form_widget(form.published, { 'attr': {'class': 'browser-default'} }) }}
                            {{ form_help(form.published) }}
                        </div>
                    </div>
                    <div class="card-action">
                        <div>
                            {{ form_label(form.submit) }}
                            {{ form_widget(form.submit) }}

                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}



